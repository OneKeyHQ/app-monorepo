{
  "name": "@onekeyhq/app-monorepo",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install && yarn build:connect && yarn build:inject",
    "build:inject": "yarn workspace @onekeyhq/inpage-provider build",
    "watch:inject": "yarn workspace @onekeyhq/inpage-provider watch-inject",
    "build:connect": "yarn build:connect:desktop && yarn build:connect:native",
    "build:connect:desktop": "yarn webpack --config ./packages/kit/development/desktop.connect.webpack.config.js",
    "build:connect:native": "yarn webpack --config ./packages/kit/development/native.connect.webpack.config.js",
    "clean": "yarn workspaces run clean && rimraf node_modules && yarn cache clean",
    "lint-staged": "lint-staged",
    "lint": "yarn workspaces run lint",
    "native": "yarn workspace @onekeyhq/app start --reset-cache",
    "ios": "yarn workspace @onekeyhq/app ios",
    "ios-install": "cd ./packages/app/ios && pod install && cd -",
    "ios-xcode": "open ./packages/app/ios/OneKeyWallet.xcworkspace",
    "android": "yarn workspace @onekeyhq/app android",
    "web": "yarn workspace @onekeyhq/web start",
    "desktop": "yarn build:inject && yarn workspace @onekeyhq/desktop dev",
    "build:desktop": "yarn build:inject && yarn workspace @onekeyhq/desktop build",
    "build:icon": "yarn workspace @shared/components build:icon"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.4",
    "@babel/preset-react": "^7.14.5",
    "@types/node": "^16.7.13",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-loader": "8.1.0",
    "babel-plugin-inline-import": "^3.0.0",
    "copy-webpack-plugin": "^6.0.2",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-wesbos": "2.1.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "expo-yarn-workspaces": "^1.6.0",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "prettier": "^2.3.2",
    "remove-files-webpack-plugin": "^1.4.5",
    "rimraf": "^3.0.2",
    "sharedworker-loader": "^2.1.1",
    "typescript": "4.4.4",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "worker-loader": "^3.0.7"
  }
}
