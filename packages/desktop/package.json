{
  "name": "@onekeyhq/desktop",
  "main": "__generated__/AppEntry.js",
  "version": "0.0.1",
  "private": true,
  "author": "OneKey <hi@onekey.so>",
  "scripts": {
    "postinstall": "expo-yarn-workspaces postinstall",
    "lint": "tsc --noEmit && eslint pages --ext .ts,.tsx && eslint src-electron --ext .ts,.tsx",
    "dev": "concurrently \"yarn build:main\" \"yarn dev:renderer\" \"cross-env LAUNCH_ELECTRON=true node scripts/dev.js\"",
    "dev:main": "electron dist/app.js",
    "dev:renderer": "BROWSER=none WEB_PORT=3001 expo start --web",
    "clean": "rimraf ./build-electron && rimraf ./build && rimraf ./dist && rimraf node_modules && rimraf .expo && rimraf __generated__",
    "clean:build": "rimraf ./build-electron && rimraf ./build && rimraf ./dist && rimraf .expo",
    "build": "yarn clean:build && yarn build:renderer && yarn build:main && yarn build:electron --publish never",
    "build:renderer": "rimraf ./build && expo build:web",
    "build:main": "cross-env NODE_ENV=production && node scripts/build.js",
    "publish:all": "yarn clean:build && yarn build:renderer && yarn build:main && yarn build:electron --publish always",
    "build:electron": "electron-builder build -mwl --config electron-builder.config.js"
  },
  "expo-yarn-workspaces": {
    "symlinks": [
      "expo-yarn-workspaces"
    ]
  },
  "dependencies": {
    "@expo/next-adapter": "^3",
    "@onekeyhq/components": "*",
    "@onekeyhq/kit": "*",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.1",
    "expo": "^43.0.2",
    "next": "^11.1.2",
    "node-fetch": "^2.6.1",
    "react-native-web": "0.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@electron/remote": "^2.0.1",
    "@types/electron-localshortcut": "^3.1.0",
    "@types/node-fetch": "^2.5.7",
    "cross-env": "^7.0.3",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-notarize": "^1.1.1",
    "esbuild": "^0.13.13",
    "glob": "^7.2.0",
    "next-compose-plugins": "^2.2.0",
    "next-transpile-modules": "^8.0.0"
  }
}
